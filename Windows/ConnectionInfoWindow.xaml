<Window x:Class="AWSServerSelector.ConnectionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSServerSelector"
        mc:Ignorable="d"
        Title="Информация о подключении - Dead by Daylight" 
        Height="600" Width="600"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        FontFamily="Segoe UI Variable"
        Icon="../Resources/icon.ico"
        Style="{StaticResource CustomWindowStyle}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Aliased"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        RenderOptions.EdgeMode="Aliased"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Dead by Daylight Inspired Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF1A1A1A"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFDC143C"/>
        <SolidColorBrush x:Key="AccentBrushHover" Color="#FFed365b"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF28A745"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFFFC107"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFDC143C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF404040"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FF0A0A0A"/>
        
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFed365b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFed365b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBlock Styles for Clear Text Rendering -->
        <Style x:Key="ClearTextBlock" TargetType="TextBlock">
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
            <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>
        
        <!-- Global TextBlock Style for All TextBlocks -->
        <Style TargetType="TextBlock">
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
            <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource AccentBrush}" 
                Padding="25,20"
                Margin="15,15,15,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="🌐 Информация о подключении" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Style="{StaticResource ClearTextBlock}"/>
                <TextBlock Text="Мониторинг активного подключения к серверу Dead by Daylight" 
                          FontSize="14" 
                          Foreground="#FFE0E0E0"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"
                          Style="{StaticResource ClearTextBlock}"/>
            </StackPanel>
        </Border>
        
        <!-- Connection Info Content -->
        <Border Grid.Row="1" 
                Background="{StaticResource CardBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Margin="15"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20">
                    
                    <!-- Current Connection Status -->
                    <Border Background="{StaticResource SecondaryBrush}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📡 Статус подключения" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"
                                      Style="{StaticResource ClearTextBlock}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Статус:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="ConnectionStatusText" 
                                          Grid.Row="0" Grid.Column="1" 
                                          Text="Не подключено" 
                                          Foreground="{StaticResource ErrorBrush}"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="IP адрес:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="IpAddressText" 
                                          Grid.Row="1" Grid.Column="1" 
                                          Text="Не определен" 
                                          Foreground="{StaticResource TextBrush}"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="Сервер:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,0"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="ServerNameText" 
                                          Grid.Row="2" Grid.Column="1" 
                                          Text="Не определен" 
                                          Foreground="{StaticResource TextBrush}"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource ClearTextBlock}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Connection Details -->
                    <Border Background="{StaticResource SecondaryBrush}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🔍 Детали подключения" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"
                                      Style="{StaticResource ClearTextBlock}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Порт:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="PortText" 
                                          Grid.Row="0" Grid.Column="1" 
                                          Text="Не определен" 
                                          Foreground="{StaticResource TextBrush}"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Пинг:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="PingText" 
                                          Grid.Row="1" Grid.Column="1" 
                                          Text="Не измерен" 
                                          Foreground="{StaticResource TextBrush}"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="Регион:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="RegionText" 
                                          Grid.Row="2" Grid.Column="1" 
                                          Text="Не определен" 
                                          Foreground="{StaticResource TextBrush}"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource ClearTextBlock}"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                          Text="Последнее обновление:" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          FontWeight="Medium"
                                          Margin="0,0,10,0"
                                          Style="{StaticResource ClearTextBlock}"/>
                                <TextBlock x:Name="LastUpdateText" 
                                          Grid.Row="3" Grid.Column="1" 
                                          Text="Никогда" 
                                          Foreground="{StaticResource TextBrush}"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource ClearTextBlock}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Instructions -->
                    <Border Background="{StaticResource SecondaryBrush}" 
                            CornerRadius="8" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="💡 Инструкции" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"
                                      Style="{StaticResource ClearTextBlock}"/>
                            <TextBlock TextWrapping="Wrap" 
                                      Foreground="{StaticResource SubTextBrush}"
                                      FontSize="13"
                                      LineHeight="18"
                                      Style="{StaticResource ClearTextBlock}">
                                <Run Text="1. Запустите Dead by Daylight и присоединитесь к лобби"/>
                                <LineBreak/>
                                <Run Text="2. Окно автоматически определит IP адрес и сервер, к которому вы подключены"/>
                                <LineBreak/>
                                <Run Text="3. Информация будет обновляться в реальном времени"/>
                                <LineBreak/>
                                <Run Text="4. Для более точного определения может потребоваться несколько секунд"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Button Panel -->
        <Border Grid.Row="2" 
                Background="#1A1A1A" 
                BorderBrush="#404040" 
                BorderThickness="0,1,0,0"
                Padding="20,15"
                Margin="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RefreshButton" 
                       Content="🔄 Обновить" 
                       Style="{StaticResource SecondaryButton}"
                       Margin="0,0,15,0"
                       Click="RefreshButton_Click"/>
                <Button x:Name="CloseButton" 
                       Content="✕ Закрыть" 
                       Style="{StaticResource ModernButton}"
                       Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
