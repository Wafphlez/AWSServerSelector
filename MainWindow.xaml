<Window x:Class="AWSServerSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSServerSelector"
        mc:Ignorable="d"
        Title="{x:Static local:LocalizationManager.AppTitle}" 
        Height="750" Width="500"
        MinHeight="750" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        FontFamily="Segoe UI Variable"
        Icon="Resources/icon.ico"
        Style="{StaticResource CustomMainWindowStyle}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Aliased"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        RenderOptions.EdgeMode="Aliased"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Dead by Daylight Inspired Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF1A1A1A"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFDC143C"/>
        <SolidColorBrush x:Key="AccentBrushHover" Color="#FFed365b"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF28A745"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFFFC107"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFDC143C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF404040"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FF0A0A0A"/>
        
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFed365b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFed365b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ListView Styles -->
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="SelectionMode" Value="Multiple"/>
        </Style>
        
        <!-- TextBlock Styles for Clear Text Rendering -->
        <Style x:Key="ClearTextBlock" TargetType="TextBlock">
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
            <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>
        
        <!-- Global TextBlock Style for All TextBlocks -->
        <Style TargetType="TextBlock">
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
            <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>
        
        
        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Border" 
                                    Background="{StaticResource SecondaryBrush}"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Width="18" Height="18"/>
                            <Path x:Name="CheckMark"
                                  Data="M 2,6 L 6,10 L 14,2"
                                  Stroke="{StaticResource AccentBrush}"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"/>
                            <Path x:Name="IndeterminateMark"
                                  Data="M 4,9 L 14,9"
                                  Stroke="{StaticResource AccentBrush}"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <!-- GroupBox Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" 
              Background="{StaticResource PrimaryBrush}" 
              Foreground="{StaticResource TextBrush}"
              BorderBrush="{StaticResource BorderBrush}"
              BorderThickness="0,0,0,1">
            <MenuItem x:Name="SettingsMenuItem" Header="{x:Static local:LocalizationManager.Settings}" 
                      Click="Settings_Click"
                      Background="{StaticResource PrimaryBrush}"
                      Foreground="{StaticResource TextBrush}"/>
            <MenuItem x:Name="AboutMenuItem" Header="{x:Static local:LocalizationManager.About}" 
                      Click="About_Click"
                      Background="{StaticResource PrimaryBrush}"
                      Foreground="{StaticResource TextBrush}"/>
            <MenuItem x:Name="CheckUpdatesMenuItem" Header="{x:Static local:LocalizationManager.CheckUpdates}" 
                      Click="CheckUpdates_Click"
                      Background="{StaticResource PrimaryBrush}"
                      Foreground="{StaticResource TextBrush}"/>
        </Menu>
        
        <!-- Header -->
        <!-- <Border Grid.Row="0" Background="{StaticResource AccentBrush}" Padding="25,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="AWS Realms" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="Black"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="AWS Server Selector" 
                          FontSize="16" 
                          Foreground="#FF4A4A4A"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>-->
        
        <!-- Server List -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Margin="15"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- List Header -->
                <Border x:Name="ServerListHeader" Grid.Row="0" Background="{StaticResource SecondaryBrush}" Padding="15,12" CornerRadius="12,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="SelectServersText" Grid.Column="0" 
                                  Text="{x:Static local:LocalizationManager.SelectServers}" 
                                  Foreground="{StaticResource TextBrush}" 
                                  FontWeight="SemiBold"
                                  FontSize="16"
                                  Style="{StaticResource ClearTextBlock}"/>
                        <TextBlock x:Name="LatencyText" Grid.Column="2" 
                                  Text="{x:Static local:LocalizationManager.Latency}" 
                                  Foreground="{StaticResource TextBrush}" 
                                  FontWeight="SemiBold"
                                  FontSize="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource ClearTextBlock}"/>
                    </Grid>
                </Border>
                
                <!-- Server List -->
                <ListView x:Name="ServerListView" 
                         Grid.Row="1" 
                         Style="{StaticResource ModernListView}"
                         Margin="0"
                         SelectionMode="Multiple"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"
                         ScrollViewer.IsDeferredScrollingEnabled="False"
                         Background="Transparent"
                         ItemsSource="{Binding ServerGroups}" d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="ItemBorder"
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Margin="{TemplateBinding Margin}"
                                                Padding="{TemplateBinding Padding}"
                                                Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick" Command="{Binding ToggleSelectionCommand}"/>
                                            </Border.InputBindings>
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                            Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF3A3A3A"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF2A2A2A"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF404040"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Expander IsExpanded="{Binding IsExpanded}" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="0,2">
                                <Expander.Header>
                                    <Border Background="{StaticResource SecondaryBrush}" 
                                           CornerRadius="6" 
                                           Padding="12,8"
                                           Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0" 
                                                     IsChecked="{Binding IsAllSelected}" 
                                                     Margin="0,0,12,0"
                                                     VerticalAlignment="Center"
                                                     Style="{StaticResource ModernCheckBox}"/>
                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding GroupName}" 
                                                      Foreground="{StaticResource TextBrush}"
                                                      FontWeight="SemiBold"
                                                      FontSize="14"
                                                      VerticalAlignment="Center"
                                                      Style="{StaticResource ClearTextBlock}"/>
                                        </Grid>
                                    </Border>
                                </Expander.Header>
                                <Expander.Content>
                                    <ItemsControl ItemsSource="{Binding Servers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="15,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding IsSelected}" 
                                                                 Margin="0,0,12,0"
                                                                 VerticalAlignment="Center"
                                                                 Style="{StaticResource ModernCheckBox}"/>
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                  Foreground="{Binding TextColor}"
                                                                  VerticalAlignment="Center"
                                                                  FontSize="13"
                                                                  FontWeight="Medium"
                                                                  Style="{StaticResource ClearTextBlock}"/>
                                                    </StackPanel>
                                                    
                                                    <Border Grid.Column="1" Background="Transparent"/>
                                                    
                                                    <Border Grid.Column="2" 
                                                            Background="{Binding LatencyColor}" 
                                                            CornerRadius="8" 
                                                            Padding="6,3"
                                                            Margin="5,0,0,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding LatencyText}" 
                                                                  Foreground="White"
                                                                  FontWeight="SemiBold"
                                                                  FontSize="11"
                                                                  HorizontalAlignment="Center"
                                                                  Style="{StaticResource ClearTextBlock}"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander.Content>
                            </Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{StaticResource SecondaryBrush}" 
                Padding="20,12"
                Margin="15,0"
                CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="💡 " 
                          Foreground="{StaticResource AccentBrush}" 
                          FontSize="14"
                          VerticalAlignment="Top"
                          Margin="0,0,8,0"
                          Style="{StaticResource ClearTextBlock}"/>
                <TextBlock Grid.Column="1"
                          x:Name="StatusText" 
                          Text="{x:Static local:LocalizationManager.StatusText}" 
                          Foreground="{StaticResource SubTextBrush}" 
                          FontSize="13"
                          TextWrapping="Wrap"
                          VerticalAlignment="Top"
                          Style="{StaticResource ClearTextBlock}"/>
            </Grid>
        </Border>
        
        <!-- Action Buttons -->
        <Border Grid.Row="4" 
                Background="{StaticResource CardBrush}" 
                Padding="0,20,20,0"
                Margin="15,0,15,0"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OpenHostsButton" 
                       Content="{x:Static local:LocalizationManager.OpenHosts}" 
                       Style="{StaticResource SecondaryButton}"
                       Margin="0,0,0,0"
                       Click="OpenHostsButton_Click"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="5" 
                Background="{StaticResource CardBrush}" 
                Padding="20,15"
                Margin="15,0,15,0"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RevertButton" 
                       Content="{x:Static local:LocalizationManager.ResetToDefault}" 
                       Style="{StaticResource SecondaryButton}"
                       Margin="0,0,15,0"
                       Click="RevertButton_Click"/>
            <Button x:Name="ApplyButton" 
                   Content="{x:Static local:LocalizationManager.ApplySelection}" 
                   Style="{StaticResource ModernButton}"
                   Click="ApplyButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
