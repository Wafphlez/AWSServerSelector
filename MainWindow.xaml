<Window x:Class="AWSServerSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSServerSelector"
        mc:Ignorable="d"
        Title="AWS Server Selector" 
        Height="750" Width="500"
        MinHeight="750" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Background="#FF0D1117"
        FontFamily="Segoe UI Variable">
    
    <Window.Resources>
        <!-- Modern AWS-Inspired Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF161B22"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF21262D"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFFF9500"/>
        <SolidColorBrush x:Key="AccentBrushHover" Color="#FFFFB84D"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#FF8B949E"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF3FB950"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFD29922"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFF85149"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF30363D"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FF0D1117"/>
        
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFB84D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFA500"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2D3339"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1C2128"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ListView Styles -->
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="SelectionMode" Value="Multiple"/>
        </Style>
        
        
        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Border" 
                                    Background="{StaticResource SecondaryBrush}"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Width="18" Height="18"/>
                            <Path x:Name="CheckMark"
                                  Data="M 2,6 L 6,10 L 14,2"
                                  Stroke="{StaticResource AccentBrush}"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFB84D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <!-- GroupBox Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <!-- <Border Grid.Row="0" Background="{StaticResource AccentBrush}" Padding="25,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="AWS Realms" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="Black"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="AWS Server Selector" 
                          FontSize="16" 
                          Foreground="#FF4A4A4A"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>-->
        
        <!-- Server List -->
        <Border Grid.Row="1" 
                Background="{StaticResource CardBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Margin="15"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- List Header -->
                <Border Grid.Row="0" Background="{StaticResource SecondaryBrush}" Padding="15,12" CornerRadius="12,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                  Text="🌐 Select AWS Servers" 
                                  Foreground="{StaticResource TextBrush}" 
                                  FontWeight="SemiBold"
                                  FontSize="16"/>
                        <TextBlock Grid.Column="2" 
                                  Text="⚡ Latency" 
                                  Foreground="{StaticResource TextBrush}" 
                                  FontWeight="SemiBold"
                                  FontSize="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Server List -->
                <ListView x:Name="ServerListView" 
                         Grid.Row="1" 
                         Style="{StaticResource ModernListView}"
                         Margin="0"
                         SelectionMode="Multiple"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Background="Transparent"
                         ItemsSource="{Binding ServerGroups}" d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="ItemBorder"
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Margin="{TemplateBinding Margin}"
                                                Padding="{TemplateBinding Padding}"
                                                Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick" Command="{Binding ToggleSelectionCommand}"/>
                                            </Border.InputBindings>
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                            Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF2D3339"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF1C2128"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF30363D"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Expander IsExpanded="{Binding IsExpanded}" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="0,2">
                                <Expander.Header>
                                    <Border Background="{StaticResource SecondaryBrush}" 
                                           CornerRadius="6" 
                                           Padding="12,8"
                                           Margin="0,0,0,4">
                                        <TextBlock Text="{Binding GroupName}" 
                                                  Foreground="{StaticResource TextBrush}"
                                                  FontWeight="SemiBold"
                                                  FontSize="14"/>
                                    </Border>
                                </Expander.Header>
                                <Expander.Content>
                                    <ItemsControl ItemsSource="{Binding Servers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="15,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding IsSelected}" 
                                                                 Margin="0,0,12,0"
                                                                 VerticalAlignment="Center"
                                                                 Style="{StaticResource ModernCheckBox}"/>
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                  Foreground="{Binding TextColor}"
                                                                  VerticalAlignment="Center"
                                                                  FontSize="13"
                                                                  FontWeight="Medium"/>
                                                    </StackPanel>
                                                    
                                                    <Border Grid.Column="1" Background="Transparent"/>
                                                    
                                                    <Border Grid.Column="2" 
                                                            Background="{Binding LatencyColor}" 
                                                            CornerRadius="8" 
                                                            Padding="6,3"
                                                            Margin="5,0,0,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding LatencyText}" 
                                                                  Foreground="White"
                                                                  FontWeight="SemiBold"
                                                                  FontSize="11"
                                                                  HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander.Content>
                            </Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryBrush}" 
                Padding="20,12"
                Margin="15,0"
                CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="💡 " 
                          Foreground="{StaticResource AccentBrush}" 
                          FontSize="14"
                          VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" 
                          Text="Select multiple AWS servers. The system will choose the best one based on latency." 
                          Foreground="{StaticResource SubTextBrush}" 
                          FontSize="13"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <Border Grid.Row="3" 
                Background="{StaticResource CardBrush}" 
                Padding="0,20,20,0"
                Margin="15,0,15,0"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OpenHostsButton" 
                       Content="📝 Open Hosts" 
                       Style="{StaticResource SecondaryButton}"
                       Margin="0,0,0,0"
                       Click="OpenHostsButton_Click"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="4" 
                Background="{StaticResource CardBrush}" 
                Padding="20,15"
                Margin="15,0,15,0"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RevertButton" 
                       Content="🔄 Reset to Default" 
                       Style="{StaticResource SecondaryButton}"
                       Margin="0,0,15,0"
                       Click="RevertButton_Click"/>
            <Button x:Name="ApplyButton" 
                   Content="🚀 Apply Selection" 
                   Style="{StaticResource ModernButton}"
                   Click="ApplyButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <!-- Menu -->
    <Window.ContextMenu>
        <ContextMenu Background="{StaticResource PrimaryBrush}" 
                    BorderBrush="{StaticResource SecondaryBrush}">
            <MenuItem Header="Settings" Click="Settings_Click"/>
            <Separator/>
            <MenuItem Header="Repository" Click="Repository_Click"/>
            <MenuItem Header="Website" Click="Website_Click"/>
            <MenuItem Header="Discord Support" Click="Discord_Click"/>
            <Separator/>
            <MenuItem Header="Open Hosts File Location" Click="OpenHostsLocation_Click"/>
            <MenuItem Header="Reset Hosts File" Click="ResetHosts_Click"/>
            <Separator/>
            <MenuItem Header="About" Click="About_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
</Window>
