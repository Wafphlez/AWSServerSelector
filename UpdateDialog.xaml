<Window x:Class="AWSServerSelector.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверить обновления" 
        Width="400" 
        Height="170"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0A0A0A"
        FontFamily="Segoe UI Variable"
        Icon="Resources/icon.ico"
        Style="{StaticResource CustomWindowStyle}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Aliased"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        RenderOptions.EdgeMode="Aliased"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#DC143C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ed365b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b8112e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <StackPanel Margin="20">
        <!-- Title -->
        <TextBlock Text="Проверка обновлений"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,10"/>
        
        <!-- Status -->
        <TextBlock Text="{Binding StatusText}"
                   FontSize="12"
                   Foreground="LightGray"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>
        
        <!-- Update Info (visible when update is available) -->
        <StackPanel x:Name="UpdateInfoPanel" Visibility="Collapsed" Margin="0,0,0,15">
            <TextBlock Text="{Binding UpdateTitle}"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#FF28A745"
                       Margin="0,0,0,5"/>
            
            <TextBlock Text="{Binding UpdateDescription}"
                       FontSize="11"
                       Foreground="LightGray"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="{Binding UpdateSize}"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,0,0,10"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="DownloadButton" 
                    Content="Скачать обновление"
                    Width="150"
                    Height="30"
                    Margin="0,0,10,0"
                    Style="{StaticResource ModernButton}"
                    Click="DownloadButton_Click"
                    Visibility="Collapsed"/>
            
            <Button Content="Закрыть"
                    Width="100"
                    Height="30"
                    Style="{StaticResource ModernButton}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>

