<Window x:Class="AWSServerSelector.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Width="520" 
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0A0A0A"
        FontFamily="Segoe UI Variable"
        Icon="Resources/icon.ico"
        Style="{StaticResource CustomWindowStyle}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Aliased"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        RenderOptions.EdgeMode="Aliased"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#DC143C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ed365b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b8112e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Content -->
        <StackPanel Grid.Row="0" Margin="25">
            <!-- Title -->
            <TextBlock Text="{Binding AboutText}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>
            
            <!-- Developer -->
            <TextBlock Text="{Binding Developer}"
                       FontSize="12"
                       Foreground="LightGray"
                       Margin="0,0,0,10"/>
            
            <!-- Version -->
            <TextBlock Text="{Binding VersionText}"
                       FontSize="11"
                       FontStyle="Italic"
                       Foreground="LightGray"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Button Panel -->
        <Border Grid.Row="1" 
               Background="#1A1A1A" 
               BorderBrush="#404040" 
               BorderThickness="0,1,0,0" 
               Padding="25,20">
            <Button Content="{Binding AwesomeText}"
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ModernButton}"
                    Click="OkButton_Click"/>
        </Border>
    </Grid>
</Window>

